<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">


    <Button
        android:id="@+id/btn_no_vm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="没有viewModel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_vm"
        app:layout_constraintHorizontal_bias="0.255"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.233" />

    <Button
        android:id="@+id/btn_vm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:text="引入viewmodel"
        app:layout_constraintBottom_toBottomOf="@+id/btn_no_vm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_no_vm"
        app:layout_constraintTop_toTopOf="@+id/btn_no_vm"
        app:layout_constraintVertical_bias="0.323" />

    <Button
        android:id="@+id/btn_no_ld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="没有LiveData"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_no_vm"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toStartOf="@+id/btn_no_vm"
        app:layout_constraintTop_toBottomOf="@+id/btn_no_vm"
        app:layout_constraintVertical_bias="0.074" />

    <Button
        android:id="@+id/btn_ld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="引入LiveData"
        app:layout_constraintBottom_toBottomOf="@+id/btn_no_ld"
        app:layout_constraintEnd_toEndOf="@+id/btn_vm"
        app:layout_constraintStart_toStartOf="@+id/btn_vm"
        app:layout_constraintTop_toTopOf="@+id/btn_no_ld" />

    <Button
        android:id="@+id/btn_vm_ld"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="MVVM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_no_ld"
        app:layout_constraintVertical_bias="0.100000024" />

    <Button
        android:id="@+id/btn_lifecycle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="引入lifecycle"
        app:layout_constraintBottom_toTopOf="@+id/btn_no_vm"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>